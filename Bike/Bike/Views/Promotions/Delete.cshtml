}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4> Promotion</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Discount
        </dt>

        <dd>
