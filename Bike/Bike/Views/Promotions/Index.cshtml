@model IEnumerable<BAL.Models.ModelTypePromotions>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Discount
        </th>
        <th>
            Quantity Min
        </th>
        <th>
            Quantity Max
        </th>
        <th>Actions</th>
    </tr>

    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.discount)%
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantity_min)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantity_max)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id })
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5">No hay elementos</td>
        </tr>
    }


</table>
